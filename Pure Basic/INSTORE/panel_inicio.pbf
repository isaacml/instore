Global panel_login

Global username, password, send, info_login


Procedure Openpanel_login(x = 0, y = 0, width = 600, height = 400)
  panel_login = OpenWindow(#PB_Any, x, y, width, height, "Tienda", #PB_Window_SystemMenu | #PB_Window_ScreenCentered | #PB_Window_WindowCentered)
  username = StringGadget(#PB_Any, 220, 120, 180, 30, "")
  password = StringGadget(#PB_Any, 220, 170, 180, 30, "", #PB_String_Password)
  send = ButtonGadget(#PB_Any, 250, 270, 110, 30, "Enviar")
  info_login = TextGadget(#PB_Any, 220, 220, 180, 30, "", #PB_Text_Center)
EndProcedure

Procedure panel_login_Events(event)
  Select event
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure

