Global panel_login

Global username, password, send, info_login

Enumeration FormFont
  #Font_panel_login_0
EndEnumeration

LoadFont(#Font_panel_login_0,"Verdana", 12)


Procedure Openpanel_login(x = 0, y = 0, width = 800, height = 600)
  panel_login = OpenWindow(#PB_Any, x, y, width, height, "Tienda", #PB_Window_SystemMenu | #PB_Window_ScreenCentered | #PB_Window_WindowCentered)
  username = StringGadget(#PB_Any, 310, 170, 210, 30, "")
  password = StringGadget(#PB_Any, 310, 220, 210, 30, "", #PB_String_Password)
  send = ButtonGadget(#PB_Any, 360, 310, 110, 30, "Enviar")
  SetGadgetFont(send, FontID(#Font_panel_login_0))
  info_login = TextGadget(#PB_Any, 310, 270, 210, 30, "", #PB_Text_Center)
  SetGadgetColor(info_login, #PB_Gadget_FrontColor,RGB(255,0,0))
EndProcedure

Procedure panel_login_Events(event)
  Select event
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure


